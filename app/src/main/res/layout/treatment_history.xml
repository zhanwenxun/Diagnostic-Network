<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.MyTreatmentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/colorAccent"
        app:navigationIcon="@drawable/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的就诊"
            android:textColor="@color/black"
            android:textSize="23dp">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="慢性阑尾炎"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/tv_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="中国人民解放军医院"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tv_hospital"
            android:layout_below="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="普通外科"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/textView48"
            android:layout_alignBottom="@+id/tv_hospital"
            android:layout_toRightOf="@+id/tv_hospital"
            android:layout_toEndOf="@+id/tv_hospital"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2015-09-24"
            android:id="@+id/tv_date"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/textView48"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="收起"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/textView50"
            android:layout_below="@+id/tv_date"
            android:layout_alignRight="@+id/tv_date"
            android:layout_alignEnd="@+id/tv_date" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="安博维"
            android:textColor="#333333"
            android:id="@+id/medcine_name1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="用法：口服"
            android:id="@+id/medcine_method1"
            android:layout_below="@+id/medcine_name1"
            android:layout_alignLeft="@+id/medcine_name1"
            android:layout_alignStart="@+id/medcine_name1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3g/3次/每天"
            android:id="@+id/tv_cishu1"
            android:layout_alignBottom="@+id/medcine_method1"
            android:layout_toRightOf="@+id/medcine_method1"
            android:layout_toEndOf="@+id/medcine_method1"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0.15g*7"
            android:id="@+id/gui_ge1"
            android:layout_alignTop="@+id/medcine_name1"
            android:layout_alignLeft="@+id/tv_cishu1"
            android:layout_alignStart="@+id/tv_cishu1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4盒"
            android:id="@+id/medcine_count1"
            android:layout_alignTop="@+id/gui_ge1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="安博维"
            android:textColor="#333333"
            android:id="@+id/medcine_name2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="用法：口服"
            android:id="@+id/medcine_method2"
            android:layout_below="@+id/medcine_name2"
            android:layout_alignLeft="@+id/medcine_name2"
            android:layout_alignStart="@+id/medcine_name2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3g/3次/每天"
            android:id="@+id/tv_cishu2"
            android:layout_alignBottom="@+id/medcine_method2"
            android:layout_toRightOf="@+id/medcine_method2"
            android:layout_toEndOf="@+id/medcine_method2"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0.15g*7"
            android:id="@+id/gui_ge2"
            android:layout_alignTop="@+id/medcine_name2"
            android:layout_alignLeft="@+id/tv_cishu2"
            android:layout_alignStart="@+id/tv_cishu2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4盒"
            android:id="@+id/medcine_count2"
            android:layout_alignTop="@+id/gui_ge2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp" />
    </RelativeLayout>

</LinearLayout>