<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="四川大学华西医院"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/hos_name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="成都市"
            android:textColor="#333333"
            android:textSize="13sp"
            android:id="@+id/hos_city"
            android:layout_below="@+id/hos_name"
            android:layout_alignLeft="@+id/hos_name"
            android:layout_alignStart="@+id/hos_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:text="三级甲等"
            android:id="@+id/hos_level"
            android:layout_alignBottom="@+id/hos_city"
            android:layout_toRightOf="@+id/hos_city"
            android:layout_toEndOf="@+id/hos_city" />

        <TextView
            android:id="@+id/hos_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hos_city"
            android:layout_marginTop="3dp"
            android:layout_alignStart="@id/hos_city"
            android:text="地址：江西省九江市浔阳区"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </RelativeLayout>

</LinearLayout>